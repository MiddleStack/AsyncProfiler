<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net46;net45</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Company>MiddleStack</Company>
    <Authors>Tony Chow</Authors>
    <Description>A lightweight, extensible profiler that provides a unified approach to desktop profiling and production APM. It fully supports async and parallelism in code.</Description>
    <PackageProjectUrl>https://github.com/MiddleStack/LiveProfiler</PackageProjectUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|netstandard2.0|AnyCPU'">
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
